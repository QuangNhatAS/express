extends ../layouts/common
block content
    h1 Create user
    if errors
        each error in errors
            .alert.alert-danger= error
    form(method="POST", action="/users/create", enctype="multipart/form-data")
        .form-group
            label(for="name") Name
            input(id="name" type="text", name="name", class="form-control", value=values ? values.name : '')
        .form-group
            label(for="phone") Phone
            input(id="phone" type="text", name="phone", class="form-control", value=values ? values.phone : '')
        button(class="btn btn-primary") Create
        .form-group
            label(for="avatar") Avatar
            input(id="avatar" type="file", name="avatar", class="form-control-file")